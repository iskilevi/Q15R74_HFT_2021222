<Window x:Class="FootballDb.WpfClient.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FootballDb.WpfClient"
        mc:Ignorable="d"
        Title="Editor Selector" Height="542" Width="800">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="1*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="2*"/>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="2*"/>
        </Grid.RowDefinitions>
        <Button Grid.Column="0" Grid.Row="1" Content="Club Editor"  Margin="10" Padding="10" />
        <Button Grid.Column="1" Grid.Row="1" Content="Player Editor" Margin="10" Padding="10" Click="Button_Click" />
        <Button Grid.Column="2" Grid.Row="1" Content="Manager Editor" Margin="10" Padding="10" Click="Button_Click_1" />
    </Grid>
</Window>
